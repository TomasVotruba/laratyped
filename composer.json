{
    "name": "tomasvotruba/laratyped",
    "type": "phpstan-extension",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "phpstan/phpstan": "^1.10",
        "illuminate/support": "^8.8 || ^9.0 || ^10.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "laravel/framework": "^10.3",
        "rector/rector": "^0.15.21",
        "symplify/easy-coding-standard": "^11.2",
        "symplify/easy-ci": "11.2.0.72"
    },
    "autoload": {
        "psr-4": {
            "Tomasvotruba\\Laratyped\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tomasvotruba\\Laratyped\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs",
        "fix-cs": "vendor/bin/ecs --fix",
        "phpstan": "vendor/bin/phpstan"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "config/extension.neon"
            ]
        }
    }
}
